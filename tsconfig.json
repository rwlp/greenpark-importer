{
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "noImplicitAny": false,
      "strictPropertyInitialization": false,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": ".",
      "moduleResolution": "node",
      "allowJs": true,
      "types": [
        "jest",
        "node",
        "reflect-metadata"
      ],
      "paths": {
        "@/*": [
          "./src/*"
        ]
      }
    },
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }
